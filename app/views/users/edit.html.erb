<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>Edit Account</h2>
      <h5>アカウントの編集</h5>
       <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn'%>
      <%= link_to "チャットページに戻る", :back, class: 'btn'%>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: current_user, local: true do |f|%>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :namae, '名前'%><br>
            <i>(フルネームで名字と名前に半角を入れない)</i>
          </div>
          <div class='field-input'>
            <%= f.text_field :name, autofocus: true%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :email, 'メールアドレス'%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :position_id , 'アカウントタイプ'%><br>
            <i>(保護者か教員を選んでください)</i>
          </div>
          <div class='field-input'>
            <%= f.text_field :position_id , autocomplete: "off"%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :position_code , 'コード入力'%><br>
            <i>(保護者は0000,教員は配布された教員コードを入力してください)</i>
          </div>
          <div class='field-input'>
            <%= f.text_field :position_code , autocomplete: "off", placeholder: '103009'%>
          </div>
        </div>

        <div class='actions'>
          <%= f.submit "変更", class: 'btn'%>
        </div>
      <% end %>
    </div>
  </div>
</div>
