<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>アカウント作成</h2>
      <h5>作成後ログインできます</h5>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f|%>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :namae, '名前'%><br>
            <i>(フルネームで名字と名前に半角を入れない)</i>
          </div>
          <div class='field-input'>
            <%= f.text_field :name, autofocus: true, placeholder: '山田太郎'%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :email, 'メールアドレス'%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email, placeholder: 'yamada111@test.com'%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :password, 'パスワード'%><br>
            <i>(英数字6文字以上)</i>
          </div>
          <div class='field-input'>
            <%= f.password_field :password, autocomplete: "off"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :password_confirmation, 'パスワード'%><br>
            <i>(再入力)</i>
          </div>
          <div class='field-input'>
            <%= f.password_field :password_confirmation, autocomplete: "off"%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :position_id , 'アカウントタイプ'%><br>
            <i>(保護者か教員を選んでください)</i>
          </div>
          <div class='field-input'>
          <%= f.collection_select(:position_id, Position.all, :id, :name, {}, {class:"position-select"}) %>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :position_code , 'コード入力'%><br>
            <i>(保護者は0000,教員は配布された教員コードを入力してください)</i>
          </div>
          <div class='field-input'>
            <%= f.text_field :position_code , autocomplete: "off", placeholder: '103009'%>
          </div>
        </div>

        <div class='actions'>
          <%= f.submit "アカウント作成", class: 'btn'%>
        </div>
      </div>
    <% end %>
  </div>
</div>
