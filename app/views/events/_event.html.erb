<div class="event">
  <div class="upper-event">
    <div class="event-user">
      <%= event.user.name %>
    </div>
    <div class="event-date">
      投稿日：<%= event.created_at %>
    </div>
  </div>
  <div class="lower-event">
    <div class="event-date">
      予定日：<%= event.event_day %>
    </div>
    <div class="event-content">
      内容：<%= event.content %>
    </div>
      添付画像：<%= image_tag event.image.variant(resize: '250x250'), class: 'event-image' if event.image.attached? %>
  </div>
  <div class="edit-delete">
    <%= link_to "編集", edit_room_event_path(room_id: event.room_id, id: event.id) %>
    <%= link_to "削除", room_event_path(room_id: event.room_id, id: event.id), method: :delete %>
  </div>
</div>
<hr>