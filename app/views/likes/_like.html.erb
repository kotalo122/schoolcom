<div id="like-btn<%= event.id %>">
  <% if user_signed_in? && event.liked_by?(current_user) %>
    <%= link_to "❤️", room_event_like_path(room_id: event.room_id, event_id: event.id), method: :delete, class: "event_likes" %>
  <% else %>
    <%= link_to "🖤", room_event_likes_path(room_id: event.room_id, event_id: event.id), method: :post, class: "event_likes" %>
  <% end %>
</div>
